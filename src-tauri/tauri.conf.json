{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Mushroom Tracker",
  "version": "1.0.2",
  "identifier": "com.chaoticneutral.myco",

  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173/",
    "frontendDist": "../dist"
  },

  "app": {
    "withGlobalTauri": true,
    "security": { "csp": null },
    "windows": [
      {
        "title": "Chaotic Neutral Tracker",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ]
  },

  "bundle": {
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": { "type": "embedBootstrapper" }
    }
  },

  "plugins": {}
}
