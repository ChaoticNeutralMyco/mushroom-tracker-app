{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Mushroom Tracker",
  "version": "1.0.2",
  "identifier": "com.chaoticneutral.myco",

  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },

  "app": {
    "windows": [
      { "title": "Mushroom Tracker", "width": 1200, "height": 800, "visible": true }
    ],
    "security": { "csp": null }
  },

  "bundle": {
    "active": true,
    "targets": "msi",
    "icon": ["icons/icon.png", "icons/icon.ico"],
    "windows": {
      "webviewInstallMode": { "type": "downloadBootstrapper" },
      "allowDowngrades": false
    }
  },

  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/ChaoticNeutralMyco/mushroom-tracker-app/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "untrusted comment: minisign public key: 8475A57AD8FB6230\nRWQwYvvYeqV1hFzY7NSm28Snpmd+efreHX70Xh7My0YWC2Io2Faj5jni"
    }
  }
}
